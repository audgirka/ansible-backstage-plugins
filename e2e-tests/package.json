{
  "name": "ansible-backstage-plugins-e2e",
  "version": "1.0.0",
  "description": "Enhanced E2E tests for Ansible Backstage Plugins",
  "scripts": {
    "cy:open": "cypress open --browser chrome --e2e",
    "cy:open:self-service": "cypress open --config-file cypress.self-service.config.ts --browser chrome --e2e",
    "cy:open:rhdh": "cypress open --config-file cypress.rhdh.config.ts --browser chrome --e2e",
    "e2e": "cypress run --browser chrome",
    "e2e:self-service": "cypress run --config-file cypress.self-service.config.ts --browser chrome",
    "e2e:rhdh": "cypress run --config-file cypress.rhdh.config.ts --browser chrome",
    "e2e:self-service:spec": "cypress run --config-file cypress.self-service.config.ts --browser chrome --spec",
    "e2e:rhdh:spec": "cypress run --config-file cypress.rhdh.config.ts --browser chrome --spec",
    "e2e:core": "cypress run --config-file cypress.self-service.config.ts --browser chrome --spec 'cypress/e2e/self-service/{browse,create,job-template-sync,history}.cy.ts'",
    "e2e:headless": "cypress run --browser electron --headless",
    "test": "npm run e2e:core",
    "test:self-service": "npm run e2e:self-service",
    "test:rhdh": "npm run e2e:rhdh",
    "test:core": "npm run e2e:core"
  },
  "devDependencies": {
    "cypress": "13.17.0",
    "otplib": "^12.0.1",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
